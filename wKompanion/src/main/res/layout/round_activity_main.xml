<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="wear_round"
    android:background="#ffe71f2b">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/bg_header_logo_center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />

    <NumberPicker
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:id="@+id/numberPicker"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/semi_t_red"
        android:orientation="horizontal"
        android:layout_above="@+id/imageView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Fan"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/numberPicker"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageView"
        android:layout_below="@+id/toggleButton"
        android:background="@color/semi_t_red" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modo"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/numberPicker"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/imageView"
        android:layout_below="@+id/toggleButton"
        android:padding="0dp"
        android:background="@color/semi_t_red" />

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_above="@+id/numberPicker"
        android:layout_centerHorizontal="true"
        android:background="@color/semi_t_red"
        android:textOn="Ligado"
        android:textOff="Desligado" />

</RelativeLayout>
